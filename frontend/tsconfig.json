{
    "compilerOptions": {
        "module": "ES2020",
        "lib": [
            "DOM",
            "ES2022"
        ],
        "isolatedModules": true,
        "jsx": "react-jsx",
        "moduleResolution": "Node",
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "~/*": [
                "./*"
            ]
        },
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}
